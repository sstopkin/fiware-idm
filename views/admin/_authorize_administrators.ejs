<!-- Form to authorize user to be admin -->
<div id="authorize_user" class="modal fade" style="top: 0px;" role="dialog" aria-hidden="false">
    <form id="submit_authorized_administrators_form" class="" action="/idm/admins/administrators?_method=put" method="POST">
        <input type='hidden' name='_csrf' value='<%= csrfToken%>' />
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">×</a>
                    <h3>Управление администраторами</h3>
                </div>
                <div class="modal-body clearfix">
                    <div class="tab-content">
                        <fieldset id="manage_organization_users_application_roles__update_owners_users" class="js-tab-pane active">
                            <input id="submit_authorize" name="submit_authorize" type="hidden" value="">
                            <div class="membership update_owners_users_membership dropdown_fix add-members" data-show-roles="True">
                                <div class="all-users">
                                    <header>
                                        <h4>Все пользователи</h4>
                                        <div class="form-group has-feedback">
                                            <input type="text" name="" id="available_update_owners_users" class="filter update_owners_users_server_filter form-control input-sm" placeholder="filter" data-url="/filters/users">
                                        </div>
                                        <div id="spinner_update_owners_users" class="filtering-spinner-inline" style="display: none;">
                                            <i class="fa fa-circle-o-notch fa-spin"></i>
                                        </div>
                                    </header>
                                    <div class="pre-scrollable filterable update_owners_users_server_filterable" id="available_update_owners_users">
                                        <ul id="available_members" class="available_members available_update_owners_users list-group">
                                        </ul>
                                        <ul class="no_results list-group alert alert-info" id="no_available_update_owners_users" style="display: none;">
                                            <li>Пользователи не найдены.</li>
                                        </ul>
                                        <ul class="no_results list-group alert alert-info" id="perform_filter_available_update_owners_users" style="display: block;">
                                            <li>Используйте фильтр (введите 2 символа или более).</li>
                                        </ul>
                                    </div>
                                    <span id="alert_error_search_available" style="display: none;" class='help-block alert alert-danger'>Недопустимые символы</span>
                                </div>
                                <div class="members-list">
                                    <header>
                                        <h4>Администраторы</h4>
                                        <div class="form-group has-feedback">
                                            <input type="text" name="" id="update_owners_users_members" class="filter update_owners_users_client_filter form-control input-sm" placeholder="filter">
                                        </div>
                                    </header>
                                    <div class="pre-scrollable filterable update_owners_users_client_filterable" id="update_owners_users_members_scroll" >

                                        <ul id="authorized_users" class="members update_owners_users_members list-group">
                                        </ul>

                                        <ul class="no_results list-group alert alert-info" id="no_update_owners_users_members" style="display: none;">
                                            <li>Нет пользователей.</li>
                                        </ul>
                                    </div>
                                    <span id="alert_error_search_authorized" style="display: none;" class='help-block alert alert-danger'>Недопустимые символы</span>
                                    <div class="alert alert-warning no_roles_warning" style="display: none;">Некоторые пользователи не имеют назначенной роли. Если вы сохраните их сейчас, они не будут авторизованы в приложении</div>
                                </div>
                            </div>
                        </fieldset>
                        <span id="info_added_user" style="display: none;" class='help-block alert alert-info'>Пользователь авторизован как администратор</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input id="submit_button" class="btn btn-primary pull-right always-enabled" type="submit" value="Save">
                    <button type="button" class="btn btn-default cancel" data-dismiss="modal">Отмена</button>
                </div>
            </div>
        </div>
    </form>
</div>
